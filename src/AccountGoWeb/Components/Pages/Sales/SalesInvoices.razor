@page "/sales/sales-invoices"
@using Dto.Sales
@inject HttpClient Http
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Sales Invoices</PageTitle>

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <button class="btn btn-primary" @onclick="NavigateToNewInvoice">
                <i class="fa fa-plus"></i> New Invoice
            </button>
            @if (selectedInvoice != null)
            {
                <button class="btn btn-secondary ms-2" @onclick="NavigateToEditInvoice">
                    <i class="fa fa-edit"></i> Edit
                </button>
                <button class="btn btn-danger ms-2" @onclick="ShowDeleteModal">
                    <i class="fa fa-trash"></i> Delete
                </button>
            }
        </div>
    </div>

    @if (isLoading)
    {
        <div class="row">
            <div class="col text-center">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-2">Loading invoices...</p>
            </div>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="row">
            <div class="col">
                <div class="alert alert-danger" role="alert">
                    <i class="fa fa-exclamation-triangle"></i> @errorMessage
                </div>
            </div>
        </div>
    }
    else if (salesInvoices == null || !salesInvoices.Any())
    {
        <div class="row">
            <div class="col">
                <div class="alert alert-info" role="alert">
                    <i class="fa fa-info-circle"></i> No invoices found.
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col">
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th @onclick="() => SortBy(nameof(SalesInvoice.No))" style="cursor: pointer;">
                                    No @GetSortIcon(nameof(SalesInvoice.No))
                                </th>
                                <th @onclick="() => SortBy(nameof(SalesInvoice.CustomerName))" style="cursor: pointer;">
                                    Customer Name @GetSortIcon(nameof(SalesInvoice.CustomerName))
                                </th>
                                <th @onclick="() => SortBy(nameof(SalesInvoice.InvoiceDate))" style="cursor: pointer;">
                                    Invoiced Date @GetSortIcon(nameof(SalesInvoice.InvoiceDate))
                                </th>
                                <th @onclick="() => SortBy(nameof(SalesInvoice.Amount))" style="cursor: pointer;">
                                    Amount @GetSortIcon(nameof(SalesInvoice.Amount))
                                </th>
                                <th @onclick="() => SortBy(nameof(SalesInvoice.ReferenceNo))" style="cursor: pointer;">
                                    Ref no @GetSortIcon(nameof(SalesInvoice.ReferenceNo))
                                </th>
                                <th>Posted</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var invoice in salesInvoices)
                            {
                                <tr @onclick="() => SelectInvoice(invoice)"
                                    class="@(selectedInvoice?.Id == invoice.Id ? "table-active" : "")" style="cursor: pointer;">
                                    <td>
                                        <a href="/sales/sales-invoice/@invoice.Id">
                                            @invoice.No
                                        </a>
                                    </td>
                                    <td>@invoice.CustomerName</td>
                                    <td>@invoice.InvoiceDate.ToString("yyyy-MM-dd")</td>
                                    <td class="text-right">@invoice.Amount.ToString("N2")</td>
                                    <td>@invoice.ReferenceNo</td>
                                    <td>
                                        <input type="checkbox" checked="@invoice.Posted" disabled />
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <p class="text-muted">Total: @salesInvoices.Count() invoice(s)</p>
            </div>
        </div>
    }
</div>

@* Delete Modal *@
@if (showDeleteModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete</h5>
                    <button type="button" class="btn-close" @onclick="CloseDeleteModal"></button>
                </div>
                <div class="modal-body">
                    <p>Do you want to delete this invoice?</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-sm btn-primary btn-flat" type="button" @onclick="DeleteInvoice">Yes</button>
                    <button class="btn btn-sm btn-default btn-flat" type="button" @onclick="CloseDeleteModal">No</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<SalesInvoice>? salesInvoices;
    private List<SalesInvoice>? allInvoices;
    private SalesInvoice? selectedInvoice;
    private bool isLoading = true;
    private bool showDeleteModal = false;
    private string? errorMessage;
    private string? sortColumn;
    private bool sortAscending = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadInvoices();
    }

    private async Task LoadInvoices()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            string baseApiUrl = Environment.GetEnvironmentVariable("APIURL") ?? "http://localhost:8001/api/";
            var apiUrl = baseApiUrl + "sales/salesinvoices";
            var response = await Http.GetAsync(apiUrl);

            if (response.IsSuccessStatusCode)
            {
                allInvoices = await response.Content.ReadFromJsonAsync<List<SalesInvoice>>();
                salesInvoices = allInvoices;
            }
            else
            {
                errorMessage = $"Failed to load invoices. Status: {response.StatusCode}";
            }
        }
        catch (HttpRequestException ex)
        {
            errorMessage = $"Network error: {ex.Message}. Please ensure the API is running on port 8001.";
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading invoices: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void SelectInvoice(SalesInvoice invoice)
    {
        selectedInvoice = invoice;
    }

    private void NavigateToNewInvoice()
    {
        Navigation.NavigateTo("/sales/add-sales-invoice", forceLoad: true);
    }

    private void NavigateToEditInvoice()
    {
        if (selectedInvoice != null)
        {
            Navigation.NavigateTo($"/sales/sales-invoice/{selectedInvoice.Id}", forceLoad: true);
        }
    }

    private void ShowDeleteModal()
    {
        if (selectedInvoice != null)
        {
            showDeleteModal = true;
        }
    }

    private void CloseDeleteModal()
    {
        showDeleteModal = false;
    }

    private async Task DeleteInvoice()
    {
        if (selectedInvoice != null)
        {
            try
            {
                string baseApiUrl = Environment.GetEnvironmentVariable("APIURL") ?? "http://localhost:8001/api/";
                var apiUrl = $"{baseApiUrl}sales/DeleteSalesInvoice?id={selectedInvoice.Id}";
                var response = await Http.DeleteAsync(apiUrl);

                if (response.IsSuccessStatusCode)
                {
                    salesInvoices?.Remove(selectedInvoice);
                    allInvoices?.Remove(selectedInvoice);
                    selectedInvoice = null;
                    showDeleteModal = false;
                }
                else
                {
                    var errorContent = await response.Content.ReadAsStringAsync();
                    errorMessage = $"Failed to delete invoice. Status: {response.StatusCode}. {errorContent}";
                    showDeleteModal = false;
                }
            }
            catch (Exception ex)
            {
                errorMessage = $"Error deleting invoice: {ex.Message}";
                showDeleteModal = false;
            }
        }
    }

    private void SortBy(string column)
    {
        if (salesInvoices == null) return;

        if (sortColumn == column)
        {
            sortAscending = !sortAscending;
        }
        else
        {
            sortColumn = column;
            sortAscending = true;
        }

        salesInvoices = column switch
        {
            nameof(SalesInvoice.No) => sortAscending
                ? salesInvoices.OrderBy(i => i.No).ToList()
                : salesInvoices.OrderByDescending(i => i.No).ToList(),
            nameof(SalesInvoice.CustomerName) => sortAscending
                ? salesInvoices.OrderBy(i => i.CustomerName).ToList()
                : salesInvoices.OrderByDescending(i => i.CustomerName).ToList(),
            nameof(SalesInvoice.InvoiceDate) => sortAscending
                ? salesInvoices.OrderBy(i => i.InvoiceDate).ToList()
                : salesInvoices.OrderByDescending(i => i.InvoiceDate).ToList(),
            nameof(SalesInvoice.Amount) => sortAscending
                ? salesInvoices.OrderBy(i => i.Amount).ToList()
                : salesInvoices.OrderByDescending(i => i.Amount).ToList(),
            nameof(SalesInvoice.ReferenceNo) => sortAscending
                ? salesInvoices.OrderBy(i => i.ReferenceNo).ToList()
                : salesInvoices.OrderByDescending(i => i.ReferenceNo).ToList(),
            _ => salesInvoices
        };
    }

    private string GetSortIcon(string column)
    {
        if (sortColumn != column) return "";
        return sortAscending ? "▲" : "▼";
    }
}
